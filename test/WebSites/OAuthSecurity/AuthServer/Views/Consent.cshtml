@model OAuthSecurity.AuthServer.Controllers.ConsentViewModel

<style>
</style>

<h1>Consent</h1>
<p>
    @Model.ClientName is requesting your permission to ...
</p>
<form asp-controller="Consent" asp-action="Consent">
    <input type="hidden" asp-for="ReturnUrl" />
    <fieldset>
        <ul>
            @foreach (var apiScope in Model.ApiScopesRequested)
            {
                <li>
                    <label>
                        <input name="ScopeValuesConsented" type="checkbox" value="@apiScope.Name" checked />@apiScope.DisplayName
                    </label> 
                </li> 
            }
        </ul>
    </fieldset>
    <button type="submit">Grant Access</button>
</form>